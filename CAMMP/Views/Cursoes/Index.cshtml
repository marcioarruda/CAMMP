@model IEnumerable<CAMMP.Models.Curso>

@{
    ViewData["Title"] = "Curso";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">E</a> |
                <a asp-action="Details" asp-route-id="@item.Id">V</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">D</a>
            </td>
        </tr>
}
    </tbody>
</table>
